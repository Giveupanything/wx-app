/* components/mine-tool/mine-tool.wxss */
.tool-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    line-height: 80rpx;
    /* background-color: #bfa; */
    margin-bottom: 10rpx;
}
.tool-icon-wrap {
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 6rpx;
    border-radius: 10rpx;
    text-align: center;
}

.tool-icon {
    width: 100%;
    height: 100%;
}
.tool-text{
    flex-grow: 1;
    padding-left: 30rpx;
}