/* components/broadcast-item/broadcast-item.wxss */
.item {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 30rpx;
    border-radius: 20rpx;
    background-color: #fff;
}

.item .item-title {
    font-size: 36rpx;
    margin-bottom: 20rpx;
}

.item .item-content {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    width: 100%;
    height: 100%;
    max-height: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 3;
    flex-grow: 1;
    color: #666;
    margin-bottom: 20rpx;
}

.item .item-time {
    font-size: 26rpx;
    color: #999;
}