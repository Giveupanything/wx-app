/* pages/myrepair/myrepair.wxss */
.repairs-title {
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
    font-size: 26rpx;
    color: #666;
}

.tag {
    /* border: 1rpx solid #000; */
    border-radius: 12rpx;
    padding: 6rpx 12rpx;
    font-size: 26rpx;
}

.info {
    background-color: #E9F1FC;
    color: #469CCF;
}

.success {
    background-color: #EBF8F1;
    color: #2FA766;
}

.cancel {
    background-color: rgb(214, 211, 210);
    color: rgb(167, 162, 162);
}

.title {
    color: #aaa;
}

.value {
    color: #000;
}

.group {
    margin-bottom: 30rpx;
}

.scroll {
    height: 1270rpx;
}

.toolbar {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 170rpx;
    background-color: #fff;
    color: #000;
    box-shadow: 0 -2rpx 2rpx 2rpx #ddd;
}