/* pages/home/home.wxss */
.container {
    position: relative;
    width: 100vw;
    height: 100vh;
    box-sizing: border-box;
    background-color: #d3dde7;
    overflow-y: scroll;
}

.top-nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 150rpx;
    border-radius: 20rpx;
    margin: 0 40rpx 30rpx;
    background-color: #fff;
}

.top-nav-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}

.top-nav-item .nav-img {
    width: 75rpx;
    height: 75rpx;
    margin-bottom: 10rpx;
    color: #000;
}

.banner {
    position: absolute;
    top: 180rpx;
    left: 0;
    width: 100%;
    height: 220rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
    overflow: hidden;
}

.banner-img {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.broadcast {
    width: 100vw;
    /* height: 200rpx; */
    box-sizing: border-box;
    padding: 80rpx 40rpx 0;
    margin-top: 190rpx;
    background-color: #fbfaff;
    border-top-left-radius: 45rpx;
    border-top-right-radius: 45rpx;
}

.broadcast-title {
    display: flex;
    align-items: center;
}

.broadcast-title .broadcast-icon {
    width: 55rpx;
    height: 55rpx;
    margin-right: 10rpx;
}

.broadcast-title :nth-child(3) {
    color: orange;
}

.broadcast-item {
    width: 100%;
    height: 300rpx;
    box-sizing: border-box;
    /* padding: 30rpx; */
    margin-top: 10rpx;
    border-radius: 20rpx;
    /* background-color: red; */
}