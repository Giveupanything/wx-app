/* pages/myhouse/myhouse.wxss */
.tool-wrap {
    position: relative;
    background-color: #fafafa;
    width: 100%;
}

.empty {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 90%;
    height: 300rpx;
    border-radius: 30rpx;
    margin: 0 30rpx;
    background-color: #fff;
    color: #aaa;
}

.empty .nav {
    display: inline;
    padding: 0 10rpx;
    color: #5599ff;
}

.scroll {
    width: 100%;
    height: 1282rpx;
}

.houses-title {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    font-size: 24rpx;
    color: #777;
}

.tag {
    /* border: 1rpx solid #000; */
    border-radius: 12rpx;
    padding: 6rpx 12rpx;
    font-size: 26rpx;
}

.info {
    background-color: #E9F1FC;
    color: #469CCF;
}

.success {
    background-color: #EBF8F1;
    color: #2FA766;
}

.fail {
    background-color: rgb(228, 75, 49);
    color: rgb(238, 22, 22);
}

.cell-label {
    border-bottom: 1rpx solid #ccc;
}

.cell-title {
    color: #888;
}

.houses-list .cell-value {
    color: #000;
}

.toolbar {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 160rpx;
    background-color: #fff;
    box-shadow: 0 -3rpx 2rpx 2rpx #eee;
}

.cell-group {
    height: 290rpx;
}

.cell-del {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 70px;
    height: 100%;
    background-color: rgb(228, 98, 98);
    color: #fff;
}