<!--pages/login/login.wxml-->
<view class="login-wrap">
    <view class="head">
        <view class="h1">登录</view>
        <text class="desc">加入享+，让生活更轻松</text>
    </view>
    <view class="main">
        <view class="phone">
            <input class="phone-inp" type="number" model:value="{{mobile}}" placeholder="请输入手机号码" placeholder-class="phclass" />
            <button class="getVerifyCode" plain bind:tap="handleGetVerifyCode">获取验证码</button>
        </view>
        <view class="verify">
            <input model:value="{{verifyCode}}" class="verify-inp" type="number" placeholder="请输入6位验证码" placeholder-class="phclass" />
        </view>
        <text class="tip">未注册手机号经验证后将自动注册</text>
    </view>

    <view class="login-btn" bind:tap="handleLogin">
        <image class="login-img" src="../../images/login.png" mode="aspectFit" />
        <text class="login-txt">登录</text>
    </view>
</view>