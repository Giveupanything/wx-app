/* pages/login/login.wxss */
.login-wrap {
    position: relative;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 30rpx;
}

.head {
    padding: 45rpx 0;
    margin-bottom: 80rpx;
}

.h1 {
    font-size: 50rpx;
    margin-bottom: 10rpx;
}

/* .desc {} */
.main {
    /* background-color: red; */
}

.phclass {
    color: #999;
}

.phone,
.verify {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 80rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ccc;
    padding-bottom: 30rpx;
    margin: 50rpx 0 30rpx;
}

.phone-inp {}

.getVerifyCode {
    border: none !important;
    margin: 0;
    font-size: 30rpx;
    color: #0066ff !important;
}

.tip {
    font-size: 26rpx;
    color: #ccc;
}

.login-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 160rpx;
    box-shadow: 0 -4rpx 3rpx 3rpx #eee;
}

.login-img {
    width: 45rpx;
    height: 45rpx;
}

.login-txt {
    padding: 10rpx 0;
    color: #333;
}