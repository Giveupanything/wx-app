/* pages/online-report/online-report.wxss */
.online-report {
    position: relative;
    width: 100%;
    height: 100vh;
}

.title {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    background-color: #eee;
    font-size: 26rpx;
    color: #888;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    padding-right: 40rpx;
    color: #ccc;
    border-bottom: 1rpx solid #eee;
}

.info-item .more {
    color: #000;
}

.item {
    width: 220rpx;
    color: #000;
}

.info-item :nth-child(2) {
    flex-grow: 1;
    text-align: left;
}

.report-house .more {
    text-align: right;
}

.submit-report {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 160rpx;
    background-color: skyblue;
}

.phone {
    align-items: center;
}

.phcolor {
    color: #ddd;
}

.problem-desc {
    align-items: flex-start;
    flex-direction: column;
    width: 100%;
    min-height: 250rpx;
    /* height: auto; */
}

.problem-desc .textarea {
    width: 100%;
    color: #000;
}

.problem-attach {
    align-items: flex-start;
    flex-direction: column;

}

.house-info {
    position: relative;
}

.picker {
    position: absolute;
    top: 0;
    display: flex;
    align-items: center;
    width: calc(100% - 30rpx);
    height: 100%;
    box-sizing: border-box;
}

.picker .p-inp {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.ta {
    display: block;
    width: 100%;
    min-height: 50rpx;
    height: 100rpx;
    padding: 30rpx;
    text-align: left;
}

.desc,
.attach {
    margin: 20rpx 0;
    padding-left: 30rpx;
    font-size: 28rpx;
    color: #333;
}

.upload {
    padding: 10rpx 30rpx;
}