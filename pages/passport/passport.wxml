<!--pages/passport/passport.wxml-->
<view class="passport">
    <view class="countdown">
        <van-count-down bind:change="timeChange" use-slot wx:if="{{passport.validTime > 0}}" time="{{passport.validTime * 1000}}">
            <text class="item">{{ timeData.hours < 10 ? '0' + timeData.hours:timeData.hours }}</text>
            <text class="item">{{ timeData.minutes < 10 ? '0' + timeData.minutes:timeData.minutes }}</text>
            <text class="item">{{ timeData.seconds < 10 ? '0' + timeData.seconds:timeData.seconds }}</text>
        </van-count-down>
        <view wx:else class="van-count-down">00:00:00</view>
        <view class="label">通行证有效时间</view>
    </view>
    <view class="qrcode">
        <image mode="aspectFit" class="qrcode-img" src="{{passport.url}}"></image>
        <view wx:if="{{passport.validTime === -1}}" class="mask">二维码失效</view>
    </view>
    <view class="description">
        <view class="house">{{passport.houseInfo}}</view>
        <view class="tips">将此二维码分享给访客，访客扫码即可开门</view>
    </view>
</view>
<view class="toolbar" wx:if="{{passport.encryptedData}}">
    <button plain class="button-share" open-type="share">
        <text class="enjoy-icon icon-share"></text>
        <text class="text">分享给朋友</text>
    </button>
    <button plain class="button-save" bind:tap="saveQRCode">
        <text class="enjoy-icon icon-save"></text>
        <text class="text">保存到本地</text>
    </button>
</view>